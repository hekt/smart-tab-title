{

  "manifest_version": 2,
  "name": "Smart Tab Title",
  "version": "1.0",

  "description": "Shorten tab titles",
  "homepage_url": "https://github.com/hekt/smart-tab-title",
  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": ["tabs"],

  "background": {
    "scripts": ["src/TabTitles.js", "src/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ]

}
